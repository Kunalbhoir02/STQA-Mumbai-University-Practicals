package practicals;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class Practical5 {
    public static void main(String[] args) {
        // Step 1: Set the system property for GeckoDriver
        System.setProperty("webdriver.gecko.driver", "D:\\geckodriver.exe"); // Change this path accordingly

        // Step 2: Initialize FirefoxDriver
        WebDriver driver = new FirefoxDriver();

        // Step 3: Navigate to a website
        driver.navigate().to("https://www.youtube.com/results?search_query=4k+videos");

        // Step 4: Maximize the browser window
        driver.manage().window().maximize();

        // Optional: Close the browser after the test
        // driver.quit(); // Uncomment to close the browser after the execution
    }
}
